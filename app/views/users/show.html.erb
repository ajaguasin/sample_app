<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.workoutposts.any? %>
      <h3>Workout Logs (<%= @user.workoutposts.count %>)</h3>
      <ol class="workoutposts">
        <%= render @workoutposts %>
      </ol>
      <%= will_paginate @workoutposts %>
    <% end %>
  </div>
</div>